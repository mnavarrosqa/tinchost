<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sites â€“ Tinchost Panel</title>
  <style>
    * { box-sizing: border-box; }
    body { font-family: system-ui, sans-serif; margin: 0; background: #f5f5f5; }
    .nav { background: #222; color: #fff; padding: 0.75rem 1.5rem; }
    .nav a { color: #fff; text-decoration: none; margin-right: 1rem; }
    main { max-width: 960px; margin: 0 auto; padding: 1.5rem; background: #fff; min-height: 80vh; }
    table { width: 100%; border-collapse: collapse; }
    th, td { padding: 0.5rem; text-align: left; border-bottom: 1px solid #ddd; }
    .btn { padding: 0.35rem 0.75rem; background: #007bff; color: #fff; text-decoration: none; border-radius: 4px; font-size: 0.9rem; }
    .btn-danger { background: #dc3545; }
  </style>
</head>
<body>
  <nav class="nav">
    <a href="/">Dashboard</a>
    <a href="/sites">Sites</a>
    <a href="/databases">Databases</a>
    <a href="/mail">Mail</a>
    <a href="/settings">Settings</a>
    <span style="float:right"><a href="/auth/logout">Logout</a></span>
  </nav>
  <main>
    <h1>Sites</h1>
    <p><a href="/sites/new" class="btn">Add site</a></p>
    <table>
      <thead>
        <tr><th>Domain</th><th>Docroot</th><th>PHP</th><th>SSL</th><th>FTP</th><th></th></tr>
      </thead>
      <tbody>
        <% sites.forEach(function(s) { %>
        <tr>
          <td><%= s.domain %></td>
          <td><%= s.docroot %></td>
          <td><%= s.php_version || '-' %></td>
          <td><%= s.ssl ? 'Yes' : 'No' %></td>
          <td><%= s.ftp_enabled ? 'Yes' : 'No' %></td>
          <td>
            <a href="/sites/<%= s.id %>/edit" class="btn">Edit</a>
            <form method="post" action="/sites/<%= s.id %>/delete" style="display:inline" onsubmit="return confirm('Delete this site? This cannot be undone.');">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
        <% if (!sites.length) { %>
        <tr><td colspan="6">No sites yet. <a href="/sites/new">Add one</a>.</td></tr>
        <% } %>
      </tbody>
    </table>
  </main>
</body>
</html>
